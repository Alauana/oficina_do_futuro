Algoritmo "atualiza_variavel"

Var
// Seção de Declarações das variáveis 
   idade: inteiro

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
      escreval("Qual a sua idade? ")
      leia(idade)
      
      idade <- idade + 1
      
      escreval("Você irá completar ", idade, " anos!")

Fimalgoritmo